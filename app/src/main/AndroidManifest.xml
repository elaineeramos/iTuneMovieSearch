<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ever.itunesmoviesearch">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MovieSearchApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_reel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_reel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".moviesearch.MovieSearchActivity"
            android:label="@string/movie_search" />
        <activity
            android:name=".moviedetails.MovieDetailsActivity"
            android:label="@string/movie_detail" />
    </application>

</manifest>